{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "exclude": ["node_modules"],
  "lib": ["es2015"]
}
